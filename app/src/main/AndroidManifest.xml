<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.uvigo.esei.bgcastro.tfm">

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activitys.VehiculosActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitys.GestionVehiculosActivity" android:parentActivityName=".activitys.VehiculosActivity" android:launchMode="singleTop" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activitys.VehiculosActivity"/>
        </activity>
        <activity android:name=".activitys.MantenimientosActivity" android:parentActivityName=".activitys.GestionVehiculosActivity" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activitys.GestionVehiculosActivity"/>
        </activity>
        <activity android:name=".activitys.GestionMantenimientosActivity" android:parentActivityName=".activitys.MantenimientosActivity" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activitys.MantenimientosActivity"/>
        </activity>

        <activity android:name=".activitys.ReparacionesActivity" android:parentActivityName=".activitys.MantenimientosActivity" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activitys.MantenimientosActivity"/>
        </activity>

        <activity android:name=".activitys.GestionReparacionesActivity" android:parentActivityName=".activitys.ReparacionesActivity" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activitys.ReparacionesActivity"/>
        </activity>

        <activity android:name=".activitys.InformeActvity" android:parentActivityName=".activitys.GestionVehiculosActivity" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activitys.GestionVehiculosActivity"/>
        </activity>

        <activity android:name=".activitys.PreferencesActivity" android:screenOrientation="portrait">
        </activity>

        <provider
            android:authorities="es.uvigo.esei.bgcastro.tfm.vehiculos"
            android:name=".content_provider.VehiculoContentProvider"/>

        <provider
            android:authorities="es.uvigo.esei.bgcastro.tfm.mantenimientos"
            android:name=".content_provider.MantenimientosContentProvider"/>

        <provider
            android:authorities="es.uvigo.esei.bgcastro.tfm.reparaciones"
            android:name=".content_provider.ReparacionesContentProvider"/>

        <service android:name=".alarm.AlarmReceiverService"/>

    </application>

</manifest>
