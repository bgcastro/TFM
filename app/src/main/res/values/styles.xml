<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="vehiculo_thin">
        <item name="android:fontFamily">@string/sans_serif_thin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grisClaro</item>
    </style>

    <style name="vehiculo_bold">
        <item name="android:fontFamily">@string/sans_serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grisOscuro</item>
    </style>

    <style name="vehiculo_regular">
        <item name="android:fontFamily">@string/sans_serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grisClaro</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:fontFamily">@string/sans_serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grisClaro</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:fontFamily">@string/sans_serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grisClaro</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

</resources>
