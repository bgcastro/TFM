<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nombreTallerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/vehiculo_bold"
        android:gravity="center"
        android:paddingTop="@dimen/mantenimiento_item_padding_top"/>

    <TextView
        android:id="@+id/comentarioItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/vehiculo_regular"/>

    <TextView
        android:id="@+id/precioReparacionItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/vehiculo_regular"/>

    <RatingBar
        android:id="@+id/ratingBarItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/mantenimiento_item_padding_top"
        android:isIndicator="true"/>

</LinearLayout>